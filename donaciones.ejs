<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Donaciones</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Lista de Donaciones</h1>
    </header>
    <main>
        <table>
            <tr>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Descripción</th>
            </tr>
            <% donaciones.forEach(function(donacion) { %>
                <tr>
                    <td><%= donacion.nombre %></td>
                    <td><%= donacion.telefono %></td>
                    <td><%= donacion.descripcion %></td>
                </tr>
            <% }); %>
        </table>
    </main>
</body>
</html>
